<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">

    <com.busilinq.casepocket.widget.HeaderLayoutView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginLeft="@dimen/space_40"
        android:layout_marginTop="@dimen/space_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/space_40"
        android:textColor="@color/color_333333"
        android:text="二维码名片"/>

    <LinearLayout
        android:layout_marginTop="@dimen/space_80"
        android:layout_marginLeft="@dimen/space_50"
        android:layout_marginRight="@dimen/space_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray_frame_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_120">

            <TextView
                android:id="@+id/qrcode_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/space_36"
                android:textColor="@color/color_333333"
                android:text="懒猪"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_40"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/qrcode_avater_iv"
                android:layout_width="@dimen/space_80"
                android:layout_height="@dimen/space_80"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_40"/>

            <ImageView
                style="@style/lay_divide_line_horizontal"
                android:contentDescription="@null"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/qrcode_code_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/transparent_bg"
            android:layout_marginTop="@dimen/space_40"
            android:layout_marginBottom="@dimen/space_40"/>


    </LinearLayout>

</LinearLayout>