<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_200"
        app:cardCornerRadius="@dimen/space_10"
        app:cardElevation="@dimen/space_20" >

        <RelativeLayout
            android:id="@+id/mine_user_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mine_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/space_36"
                android:textColor="@color/color_333333"
                android:text="懒猪"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_40"/>


            <ImageView
                android:layout_toRightOf="@+id/mine_name_tv"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/space_60"
                android:layout_height="@dimen/space_60"
                android:src="@mipmap/icon_qrcode"
                android:scaleType="centerInside"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mine_avater_iv"
                android:layout_width="@dimen/space_120"
                android:layout_height="@dimen/space_120"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_40"/>
        </RelativeLayout>



    </android.support.v7.widget.CardView>


    <ImageView
        style="@style/lay_divide_line_horizontal"
        android:contentDescription="@null"
        android:layout_marginTop="@dimen/space_20"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_76">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_808080"
            android:textSize="@dimen/space_32"
            android:text="关于作者"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_20"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_next_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space_30"/>

    </RelativeLayout>

    <ImageView
        style="@style/lay_divide_line_horizontal"
        android:contentDescription="@null"
        android:layout_marginTop="@dimen/space_20"/>


</LinearLayout>