<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginTop="@dimen/space_56"
        android:padding="@dimen/space_10"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_arrow_back_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_45"
        android:layout_marginTop="@dimen/space_102"
        android:text="Hi !"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/space_38" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_45"
        android:layout_marginTop="@dimen/space_32"
        android:text="欢迎回来"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/space_63" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_phone_et"
            style="@style/editText_background"
            android:layout_marginBottom="@dimen/space_20"
            android:layout_marginTop="@dimen/space_132"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:textColorHint="@color/color_999999" />

        <ImageView
            style="@style/lay_divide_line_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_35"
            android:layout_marginRight="@dimen/space_35"
            android:contentDescription="@null" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_password_et"
            style="@style/editText_background"
            android:layout_marginBottom="@dimen/space_20"
            android:layout_marginTop="@dimen/space_40"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:textColorHint="@color/color_999999" />

        <ImageView
            style="@style/lay_divide_line_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_35"
            android:layout_marginRight="@dimen/space_35"
            android:contentDescription="@null" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_30"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginLeft="@dimen/space_20">

        <TextView
            android:id="@+id/login_forget_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/space_32"
            android:padding="@dimen/space_20"/>

        <TextView
            android:id="@+id/login_regist_tv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速注册"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/space_32"
            android:padding="@dimen/space_20"/>

    </RelativeLayout>


    <Button
        android:id="@+id/login_sure_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_92"
        android:layout_marginLeft="@dimen/space_36"
        android:layout_marginRight="@dimen/space_36"
        android:layout_marginTop="@dimen/space_128"
        android:background="@drawable/shape_gradient_button_bg"
        style="?android:attr/borderlessButtonStyle"
        android:text="登录"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/space_28" />

</LinearLayout>