<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_layout_bg">

    <LinearLayout
        android:layout_width="@dimen/space_656"
        android:layout_height="@dimen/space_400"
        android:orientation="vertical"
        android:background="@drawable/shape_dialog_layout_bg">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_110"
            android:text="删除数据"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/space_36"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_message"
            android:background="@color/color_ffffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_0"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/space_30"
            android:textColor="@color/color_999999"
            android:text="就诊人与上传病历资料是绑定在一起的,\n删除就诊人将一并删除所上传的病历资料,\n您确定要删除此就诊人吗？" />


        <ImageView
            style="@style/lay_divide_line_horizontal"
            android:contentDescription="@null"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_110"
            android:orientation="horizontal"
            android:background="@color/color_ffffff">

            <TextView
                android:id="@+id/tv_certain"
                android:layout_width="@dimen/space_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/space_30"
                android:text="是"/>

            <ImageView
                android:layout_width="@dimen/space_1"
                android:layout_height="match_parent"
                android:src="@color/color_CCCCCC"
                android:contentDescription="@null"/>

            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="@dimen/space_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_53a4f3"
                android:textSize="@dimen/space_30"
                android:text="否"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>