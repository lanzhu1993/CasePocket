<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_20"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginTop="@dimen/space_28"
            android:text="2017-04-03"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/space_26" />

        <TextView
            android:id="@+id/item_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/item_date"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginTop="@dimen/space_20"
            android:text="贵州省第一人民医院"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/space_30" />

        <ImageView
            android:layout_width="@dimen/space_106"
            android:layout_height="@dimen/space_36"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_20"
            android:src="@mipmap/icon_case_detail"
            android:scaleType="fitXY"/>

        <ImageView
            style="@style/lay_divide_line_horizontal"
            android:layout_below="@+id/item_hospital"
            android:layout_marginTop="@dimen/space_20" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_210"
        android:layout_marginBottom="@dimen/space_30"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginTop="@dimen/space_30" />

    <ImageView style="@style/lay_divide_line_horizontal" />

    <TextView
        android:id="@+id/item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_30"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="@dimen/space_30"
        android:textColor="@color/color_aaaaaa"
        android:textSize="@dimen/space_28" />

</LinearLayout>