<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">


    <TextView
        android:id="@+id/welcome_experience_tv"
        android:layout_width="@dimen/space_170"
        android:layout_height="@dimen/space_48"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/space_30"
        android:layout_marginTop="@dimen/space_60"
        android:background="@drawable/shape_welcome_exper_tv"
        android:gravity="center"
        android:text="体验一下"
        android:visibility="invisible"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/space_26" />

    <android.support.v4.view.ViewPager
        android:id="@+id/welcome_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/welcome_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/space_50">

        <LinearLayout
            android:id="@+id/welcome_viewGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"/>

        <View
            android:id="@+id/welcome_point"
            android:layout_width="@dimen/space_50"
            android:layout_height="@dimen/space_30"
            android:background="@drawable/icon_point_seleted" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/welcome_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_60"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/welcome_login_tv"
            android:layout_width="@dimen/space_0"
            android:layout_height="@dimen/space_86"
            android:layout_weight="1"
            android:background="@drawable/shape_welcome_login_tv"
            android:gravity="center"
            android:text="登陆"
            android:textColor="@color/color_CCCCCC"
            android:textSize="@dimen/space_36" />

        <TextView
            android:id="@+id/welcome_regist_tv"
            android:layout_width="@dimen/space_0"
            android:layout_height="@dimen/space_86"
            android:layout_marginLeft="@dimen/space_49"
            android:layout_weight="1"
            android:background="@drawable/shape_welcome_regist_tv"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/color_60b9f5"
            android:textSize="@dimen/space_36" />

    </LinearLayout>

</RelativeLayout>