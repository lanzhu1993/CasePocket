<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/regist_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginTop="@dimen/space_56"
        android:padding="@dimen/space_10"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_arrow_back_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_45"
        android:layout_marginTop="@dimen/space_102"
        android:text="Hi !"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/space_38" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_45"
        android:layout_marginTop="@dimen/space_32"
        android:text="欢迎加入"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/space_63" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/regist_phone_et"
            style="@style/editText_background"
            android:layout_marginBottom="@dimen/space_20"
            android:layout_marginTop="@dimen/space_132"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:textColorHint="@color/color_999999" />

        <ImageView
            style="@style/lay_divide_line_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_35"
            android:layout_marginRight="@dimen/space_35"
            android:contentDescription="@null" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/regist_code_et"
                style="@style/editText_background"
                android:layout_width="@dimen/space_0"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_40"
                android:layout_weight="1"
                android:maxLength="6"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textColorHint="@color/color_999999" />

            <ImageView
                style="@style/lay_divide_line_vertical"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_40"
                android:layout_marginTop="@dimen/space_50"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/regist_getcode_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_45"
                android:layout_marginTop="@dimen/space_20"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/space_28" />


        </LinearLayout>

        <ImageView
            style="@style/lay_divide_line_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_35"
            android:layout_marginRight="@dimen/space_35"
            android:contentDescription="@null" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/regist_password_et"
            style="@style/editText_background"
            android:layout_marginBottom="@dimen/space_20"
            android:layout_marginTop="@dimen/space_40"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:textColorHint="@color/color_999999" />

        <ImageView
            style="@style/lay_divide_line_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_35"
            android:layout_marginRight="@dimen/space_35"
            android:contentDescription="@null" />


    </LinearLayout>


    <Button
        android:id="@+id/regist_sure_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_92"
        android:layout_marginLeft="@dimen/space_36"
        android:layout_marginRight="@dimen/space_36"
        android:layout_marginTop="@dimen/space_87"
        android:background="@drawable/shape_gradient_button_bg"
        style="?android:attr/borderlessButtonStyle"
        android:text="确认注册"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/space_28" />

</LinearLayout>