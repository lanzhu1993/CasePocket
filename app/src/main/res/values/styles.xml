<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="Dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="editText_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/space_44</item>
        <item name="android:layout_marginRight">@dimen/space_44</item>
        <item name="android:textSize">@dimen/space_34</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:background">@null</item>
    </style>

    <style name="lay_divide_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_1</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@color/color_CCCCCC</item>
    </style>

    <style name="lay_divide_line_vertical">
        <item name="android:layout_marginBottom">@dimen/space_10</item>
        <item name="android:layout_marginTop">@dimen/space_10</item>
        <item name="android:layout_width">@dimen/space_2</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@color/color_CCCCCC</item>
    </style>

    <style name="gradient_btuuon_style">
        <item name="android:layout_marginLeft">@dimen/space_36</item>
        <item name="android:layout_marginRight">@dimen/space_36</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_46</item>
        <item name="android:background">@drawable/shape_gradient_button_bg</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textSize">@dimen/space_28</item>
    </style>

    <style name="addcase_imageview_first_style">
        <item name="android:layout_width">@dimen/space_50</item>
        <item name="android:layout_height">@dimen/space_50</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="addcase_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/space_20</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/space_32</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="addcase_imagview_next_style">
        <item name="android:layout_width">@dimen/space_30</item>
        <item name="android:layout_height">@dimen/space_30</item>
        <item name="android:layout_marginRight">@dimen/space_20</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="popupwindow_animation">
        <item name="android:windowEnterAnimation">@anim/popupwindow_enter</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_exit</item>
    </style>

    <style name="TabLayoutTextStyle"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/space_30</item>
    </style>
</resources>
